{
  "manifest_version": 3,
  "name": "CoolBeans",
  "version": "0.0.1",
  "description": "Minimal Vite + TypeScript + CRXJS (MV3) extension",
  "icons": {
    "16": "icons/favicon-96x96.png",
    "32": "icons/favicon-96x96.png",
    "48": "icons/favicon-96x96.png",
    "96": "icons/favicon-96x96.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CoolBeans",
    "default_icon": {
      "16": "icons/favicon-96x96.png",
      "32": "icons/favicon-96x96.png",
      "48": "icons/favicon-96x96.png",
      "96": "icons/favicon-96x96.png"
    }
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/content-script.js-DhegjVpa.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/content-script.js-DhegjVpa.js",
        "assets/content-script.js-DhegjVpa.js.map"
      ],
      "use_dynamic_url": false
    }
  ]
}
